{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },
    "esModuleInterop": true, // позволяет работать с пакетами, которые используют common js
    "allowSyntheticDefaultImports": true // добавляет дефолтный импорт, если его нет
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
