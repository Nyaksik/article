{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "./src/*"
      ]
    },
    // позволяет работать с пакетами, которые используют common js
    "esModuleInterop": true,
    // добавляет дефолтный импорт, если его нет
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "./webpack.config.ts",
    "./config",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}
